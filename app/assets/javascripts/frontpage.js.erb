$(document).ready(function() {

  $("#slider-bs").backstretch(['assets/block.jpeg', "assets/concrete-repairs.jpg", "assets/barren-construction.jpg" ], {duration: 5000, fade: "slow", lazyload: true});

  var texts = [
  "two", "three", "one"
  ]

  $(window).on("backstretch.before", function (e, instance) {
    $('.caps').hide()
    $('.overlay-header').hide();
    $("#"+texts[instance.index]+"").fadeIn("slow");
    $("#head-"+texts[instance.index]+"").fadeIn("slow");
  });

});