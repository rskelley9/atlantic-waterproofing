<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> fade in alert-block">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <% if type == :error %>
    <h4>Uh-Oh, you made a mistake!</h4>
    <%end%>
    <%= message %>
  </div>
<% end %>